<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_operations" model="ir.ui.view">
        <field name="name">stock.move.operations.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <field name="move_line_ids" position="before">
                <field name="picking_code" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id"
               ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <field name="lot_name" position="after">
                <field name="removal_date"  attrs="{'column_invisible':[('parent.picking_code', '!=', 'incoming')]}"/>
            </field>
            <field name="lot_name" position="attributes">
                <attribute name="context">{'removal_date': removal_date}</attribute>
            </field>
        </field>
    </record>
</odoo>
